<script type="module">
import confetti from "https://esm.run/canvas-confetti@1";

customElements.define("confetti-logo", class extends HTMLElement {
	constructor() {
		super();

		this.addEventListener("click", this);
		this.fire();
	}

	fire() {
		let colors = ["#236a40", "#265f3a", "#1c6537"];
		confetti({
	    particleCount: 100,
	    angle: 60,
	    spread: 55,
	    origin: { x: -.1 },
	    // colors: colors
	  });
	  confetti({
	    particleCount: 100,
	    angle: 120,
	    spread: 55,
	    origin: { x: 1.1 },
	    // colors: colors
	  });
	}

	handleEvent(event) {
		this.fire();
	}
});
</script>
